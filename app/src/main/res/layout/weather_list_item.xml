<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/day"
        android:text="Today"
        android:layout_weight="3"
        style="@style/WeatherForecastListItemText" />

    <ImageView
        android:id="@+id/conditionImage"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginRight="5dp" />

    <TextView
        android:id="@+id/description"
        android:text="Rain until evening"
        android:layout_weight="5"
        style="@style/WeatherForecastListItemText" />

    <TextView
        android:id="@+id/maximum_temperature"
        android:text="19°"
        android:layout_weight="1"
        android:maxLines="1"
        android:gravity="right"
        android:layout_marginRight="3dp"
        style="@style/WeatherForecastListItemTextEmphasis" />

    <TextView
        android:id="@+id/minimum_temperature"
        android:text="14°"
        android:gravity="right"
        android:maxLines="1"
        android:layout_weight="1"
        style="@style/WeatherForecastListItemTextDeEmphasis" />

</LinearLayout>